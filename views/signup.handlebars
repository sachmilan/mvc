<div class="display-flex align-content-center align-center justify-center row">
    <div class="col-sm-10 col-lg-7">
        <section class="card mx-3">
            <div class="card-header text-center">
                <h1>Sign Up</h1>
            </div>
            <div class="card-body">

                <form class="mb-2 signup-form">
                    <div class="display-flex align-content-center align-center justify-center row">

                        <div class="form-group col-sm-10">
                            Username: <input type="text" class="form-input" id="username-signup" placeholder="Username"/>
                            Email: <input type="text" class="form-input" id="email-signup" placeholder="Email"/>
                            Password: <input type="password" class="form-input" id="password-signup" placeholder="Password"/>
                            <button type="submit" class="btn">Sign Up</button>
                        </div>
                        <div class="col-sm-10">
                            Already have an account? <a id="login" href="/login">Log In!</a>
                        </div>
                    </div>
                </form>
                
            </div>
        </section>
    </div>
</div>

<script src="/js/signup.js"></script>